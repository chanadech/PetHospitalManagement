<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A36"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/my_image" />

        <!-- New Section for New Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="25dp">
            <TextView
                android:id="@+id/newProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Product Name"
                android:textColor="#D4AF37"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Price: $00.00"

                android:textColor="#FFF1FF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newProductQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Quantity: 0"
                android:textColor="#DABFFF"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/newProductDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Date: DD/MM/YYYY"
                android:textColor="#DABFFF"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/newProductTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: HH:MM"
                android:textColor="#DABFFF"
                android:textSize="16sp" />



            <!-- ... Other TextViews like Quantity, Date, Time -->

        </LinearLayout>
        <!-- End of New Section -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/baseline_edit_24"
                app:tint="#DABFFF" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/baseline_delete_24"
                app:tint="#DABFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
